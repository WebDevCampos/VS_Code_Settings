{
  /* Configurações do Editor */
  "editor.rulers": [80],
  "editor.detectIndentation": true,
  "editor.guides.indentation": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 4,
  "editor.indentSize": "tabSize",
  "editor.guides.highlightActiveIndentation": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": false,
    "source.organizeImports": true
  },
  "editor.suggestSelection": "first",
  "editor.semanticHighlighting.enabled": false,
  "editor.renderLineHighlight": "gutter",
  "editor.parameterHints.enabled": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.formatOnSave": true,
  "editor.fontSize": 16,
  "editor.autoClosingBrackets": "always",
  "editor.lineHeight": 0,
  "editor.matchBrackets": "always",
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 80,
  "editor.linkedEditing": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.useTabStops": false,
  "editor.inlineSuggest.enabled": true,

  /* Configurações de Formatação por Linguagem */
  "[python]": {
    "editor.defaultFormatter": "ms-python.vscode-pylance"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  /* Configurações do Emmet */
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "emmet.includeLanguages": {
    "vue-html": "html",
    "css": "css",
    "javascript": "javascriptreact",
    "django-html": "html"
  },

  /* Configurações do Markdown */
  "[markdown]": {
    "editor.wordWrap": "off",
    "editor.quickSuggestions": {
      "comments": true,
      "strings": true,
      "other": true
    }
  },
  "html.format.indentHandlebars": true,

  /* Configurações do CSS */
  "css.completion.completePropertyWithSemicolon": true,

  /* Configurações do JSONC */
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  /* Configurações do Git */
  "npm.exclude": "",
  "security.workspace.trust.untrustedFiles": "open",
  "git.autofetch": true,
  "git.path": "E:\\Git\\Git\\bin\\git.exe",

  /* Configurações do Workbench */
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.labelFormat": "short",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Dracula",
  "python.createEnvironment.contentButton": "show",
  "typescript.suggest.paths": false,
  "javascript.suggest.paths": false,
  "python.formatting.provider": "pylance",

  /* Configurações do Diff */
  "diffEditor.wordWrap": "on",

  /* Configurações do Prettier */
  "editor.defaultFoldingRangeProvider": "esbenp.prettier-vscode",
  "editor.defaultFormatter": "esbenp.prettier-vscode"
}
